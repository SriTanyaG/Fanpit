{
  "name": "fanpit-platform",
  "version": "1.0.0",
  "description": "A comprehensive space booking platform with advanced pricing engine and reservation workflow",
  "main": "index.js",
  "scripts": {
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd Fanpit-Assesment && npm install",
    "setup:frontend": "cd fanpit-frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd Fanpit-Assesment && npm run start:dev",
    "dev:frontend": "cd fanpit-frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd Fanpit-Assesment && npm run build",
    "build:frontend": "cd fanpit-frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd Fanpit-Assesment && npm run start",
    "start:frontend": "cd fanpit-frontend && npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd Fanpit-Assesment && npm run test",
    "test:frontend": "cd fanpit-frontend && npm run test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd Fanpit-Assesment && npm run lint",
    "lint:frontend": "cd fanpit-frontend && npm run lint",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd Fanpit-Assesment && rm -rf node_modules dist",
    "clean:frontend": "cd fanpit-frontend && rm -rf node_modules .next out"
  },
  "keywords": [
    "space-booking",
    "pricing-engine",
    "reservation-workflow",
    "nextjs",
    "nestjs",
    "mongodb",
    "razorpay",
    "typescript"
  ],
  "author": "Fanpit Development Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fanpit-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/fanpit-platform/issues"
  },
  "homepage": "https://github.com/your-username/fanpit-platform#readme"
}
